SELECT *
FROM `MESSAGE`
JOIN `EMPLOYEE` `MESSAGE_SENDER_EMPLOYEE` ON `MESSAGE`.`SENDER_ID` = `MESSAGE_SENDER_EMPLOYEE`.`EMPLOYEE_ID`
JOIN `USER` `MESSAGE_SENDER_EMPLOYEE_USER` ON `MESSAGE_SENDER_EMPLOYEE`.`USER_ID` = `MESSAGE_SENDER_EMPLOYEE_USER`.`USER_ID`
JOIN `EMPLOYEE` `MESSAGE_RECEIVER_EMPLOYEE` ON `MESSAGE`.`RECEIVER_ID` = `MESSAGE_RECEIVER_EMPLOYEE`.`EMPLOYEE_ID`
JOIN`USER` `MESSAGE_RECEIVER_EMPLOYEE_USER` ON `MESSAGE_RECEIVER_EMPLOYEE`.`USER_ID` = `MESSAGE_RECEIVER_EMPLOYEE_USER`.`USER_ID`
WHERE `MESSAGE`.`MESSAGE_ID` = ?;