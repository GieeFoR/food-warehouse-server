SELECT MESSAGE.MESSAGE_ID AS 'MESSAGE.MESSAGE_ID',
       MESSAGE.SENDER_ID AS 'MESSAGE.SENDER_ID',
       MESSAGE.RECEIVER_ID AS 'MESSAGE.RECEIVER_ID',
       MESSAGE.CONTENT AS 'MESSAGE.CONTENT',
       MESSAGE.MESSAGE_STATE AS 'MESSAGE.MESSAGE_STATE',
       MESSAGE.SEND_DATE AS 'MESSAGE.SEND_DATE',
       MESSAGE.READ_DATE AS 'MESSAGE.READ_DATE',
       MESSAGE_SENDER_EMPLOYEE.EMPLOYEE_ID AS 'MESSAGE_SENDER_EMPLOYEE.EMPLOYEE_ID',
       MESSAGE_SENDER_EMPLOYEE.USER_ID AS 'MESSAGE_SENDER_EMPLOYEE.USER_ID',
       MESSAGE_SENDER_EMPLOYEE.NAME AS 'MESSAGE_SENDER_EMPLOYEE.NAME',
       MESSAGE_SENDER_EMPLOYEE.SURNAME AS 'MESSAGE_SENDER_EMPLOYEE.SURNAME',
       MESSAGE_SENDER_EMPLOYEE.POSITION AS 'MESSAGE_SENDER_EMPLOYEE.POSITION',
       MESSAGE_SENDER_EMPLOYEE.SALARY AS 'MESSAGE_SENDER_EMPLOYEE.SALARY',
       MESSAGE_SENDER_EMPLOYEE_USER.USER_ID AS 'MESSAGE_SENDER_EMPLOYEE_USER.USER_ID',
       MESSAGE_SENDER_EMPLOYEE_USER.USERNAME AS 'MESSAGE_SENDER_EMPLOYEE_USER.USERNAME',
       MESSAGE_SENDER_EMPLOYEE_USER.PASSWORD AS 'MESSAGE_SENDER_EMPLOYEE_USER.PASSWORD',
       MESSAGE_SENDER_EMPLOYEE_USER.PERMISSION AS 'MESSAGE_SENDER_EMPLOYEE_USER.PERMISSION',
       MESSAGE_SENDER_EMPLOYEE_USER.E_MAIL AS 'MESSAGE_SENDER_EMPLOYEE_USER.E_MAIL',
       MESSAGE_RECEIVER_EMPLOYEE.EMPLOYEE_ID AS 'MESSAGE_RECEIVER_EMPLOYEE.EMPLOYEE_ID',
       MESSAGE_RECEIVER_EMPLOYEE.USER_ID AS 'MESSAGE_RECEIVER_EMPLOYEE.USER_ID',
       MESSAGE_RECEIVER_EMPLOYEE.NAME AS 'MESSAGE_RECEIVER_EMPLOYEE.NAME',
       MESSAGE_RECEIVER_EMPLOYEE.SURNAME AS 'MESSAGE_RECEIVER_EMPLOYEE.SURNAME',
       MESSAGE_RECEIVER_EMPLOYEE.POSITION AS 'MESSAGE_RECEIVER_EMPLOYEE.POSITION',
       MESSAGE_RECEIVER_EMPLOYEE.SALARY AS 'MESSAGE_RECEIVER_EMPLOYEE.SALARY',
       MESSAGE_RECEIVER_EMPLOYEE_USER.USER_ID AS 'MESSAGE_RECEIVER_EMPLOYEE_USER.USER_ID',
       MESSAGE_RECEIVER_EMPLOYEE_USER.USERNAME AS 'MESSAGE_RECEIVER_EMPLOYEE_USER.USERNAME',
       MESSAGE_RECEIVER_EMPLOYEE_USER.PASSWORD AS 'MESSAGE_RECEIVER_EMPLOYEE_USER.PASSWORD',
       MESSAGE_RECEIVER_EMPLOYEE_USER.PERMISSION AS 'MESSAGE_RECEIVER_EMPLOYEE_USER.PERMISSION',
       MESSAGE_RECEIVER_EMPLOYEE_USER.E_MAIL AS 'MESSAGE_RECEIVER_EMPLOYEE_USER.E_MAIL'
FROM `MESSAGE`
JOIN `EMPLOYEE` `MESSAGE_SENDER_EMPLOYEE` ON `MESSAGE`.`SENDER_ID` = `MESSAGE_SENDER_EMPLOYEE`.`EMPLOYEE_ID`
JOIN `USER` `MESSAGE_SENDER_EMPLOYEE_USER` ON `MESSAGE_SENDER_EMPLOYEE`.`USER_ID` = `MESSAGE_SENDER_EMPLOYEE_USER`.`USER_ID`
JOIN `EMPLOYEE` `MESSAGE_RECEIVER_EMPLOYEE` ON `MESSAGE`.`RECEIVER_ID` = `MESSAGE_RECEIVER_EMPLOYEE`.`EMPLOYEE_ID`
JOIN`USER` `MESSAGE_RECEIVER_EMPLOYEE_USER` ON `MESSAGE_RECEIVER_EMPLOYEE`.`USER_ID` = `MESSAGE_RECEIVER_EMPLOYEE_USER`.`USER_ID`
WHERE `MESSAGE`.`MESSAGE_ID` = ?;