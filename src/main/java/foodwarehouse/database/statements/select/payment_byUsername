SELECT PAYMENT.PAYMENT_ID AS 'PAYMENT.PAYMENT_ID',
       PAYMENT.PAYMENT_TYPE_ID AS 'PAYMENT.PAYMENT_TYPE_ID',
       PAYMENT.PAYMENT_VALUE AS 'PAYMENT.PAYMENT_VALUE',
       PAYMENT.PAYMENT_STATE AS 'PAYMENT.PAYMENT_STATE',
       PAYMENT_PAYMENT_TYPE.PAYMENT_TYPE_ID AS 'PAYMENT_PAYMENT_TYPE.PAYMENT_TYPE_ID',
       PAYMENT_PAYMENT_TYPE.PAYMENT_TYPE AS 'PAYMENT_PAYMENT_TYPE.PAYMENT_TYPE'
FROM `PAYMENT`
JOIN `PAYMENT_TYPE` `PAYMENT_PAYMENT_TYPE` ON `PAYMENT`.`PAYMENT_TYPE_ID` = `PAYMENT_PAYMENT_TYPE`.`PAYMENT_TYPE_ID`
WHERE `PAYMENT_ID` IN (
    SELECT `PAYMENT_ID`
    FROM `ORDER`
    JOIN `CUSTOMER` ON `ORDER`.`CUSTOMER_ID` = `CUSTOMER`.`CUSTOMER_ID`
    JOIN `USER` ON `CUSTOMER`.`USER_ID` = `USER`.`USER_ID`
    WHERE `USER`.`USERNAME` = ?);