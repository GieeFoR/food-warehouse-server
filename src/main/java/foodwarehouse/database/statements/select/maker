SELECT MAKER.MAKER_ID AS 'MAKER.MAKER_ID',
       MAKER.ADDRESS_ID AS 'MAKER.ADDRESS_ID',
       MAKER.FIRM_NAME AS 'MAKER.FIRM_NAME',
       MAKER.TELEPHONE_NO AS 'MAKER.TELEPHONE_NO',
       MAKER.E_MAIL AS 'MAKER.E_MAIL',
       MAKER_ADDRESS.ADDRESS_ID AS 'MAKER_ADDRESS.ADDRESS_ID',
       MAKER_ADDRESS.COUNTRY AS 'MAKER_ADDRESS.COUNTRY',
       MAKER_ADDRESS.TOWN AS 'MAKER_ADDRESS.TOWN',
       MAKER_ADDRESS.POSTAL_CODE AS 'MAKER_ADDRESS.POSTAL_CODE',
       MAKER_ADDRESS.BUILDING_NO AS 'MAKER_ADDRESS.BUILDING_NO',
       MAKER_ADDRESS.STREET AS 'MAKER_ADDRESS.STREET',
       MAKER_ADDRESS.APARTMENT_NO AS 'MAKER_ADDRESS.APARTMENT_NO'
FROM `MAKER`
JOIN `ADDRESS` `MAKER_ADDRESS` ON `MAKER`.`ADDRESS_ID` = `MAKER_ADDRESS`.`ADDRESS_ID`;