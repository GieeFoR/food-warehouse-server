SELECT STORAGE.STORAGE_ID AS 'STORAGE.STORAGE_ID',
       STORAGE.ADDRESS_ID AS 'STORAGE.ADDRESS_ID',
       STORAGE.MANAGER_ID AS 'STORAGE.MANAGER_ID',
       STORAGE.STORAGE_NAME AS 'STORAGE.STORAGE_NAME',
       STORAGE.CAPACITY AS 'STORAGE.CAPACITY',
       STORAGE.IS_COLD_STORAGE AS 'STORAGE.IS_COLD_STORAGE',
       STORAGE_ADDRESS.ADDRESS_ID AS 'STORAGE_ADDRESS.ADDRESS_ID',
       STORAGE_ADDRESS.COUNTRY AS 'STORAGE_ADDRESS.COUNTRY',
       STORAGE_ADDRESS.TOWN AS 'STORAGE_ADDRESS.TOWN',
       STORAGE_ADDRESS.POSTAL_CODE AS 'STORAGE_ADDRESS.POSTAL_CODE',
       STORAGE_ADDRESS.BUILDING_NO AS 'STORAGE_ADDRESS.BUILDING_NO',
       STORAGE_ADDRESS.STREET AS 'STORAGE_ADDRESS.STREET',
       STORAGE_ADDRESS.APARTMENT_NO AS 'STORAGE_ADDRESS.APARTMENT_NO',
       STORAGE_EMPLOYEE.EMPLOYEE_ID AS 'STORAGE_EMPLOYEE.EMPLOYEE_ID',
       STORAGE_EMPLOYEE.USER_ID AS 'STORAGE_EMPLOYEE.USER_ID',
       STORAGE_EMPLOYEE.NAME AS 'STORAGE_EMPLOYEE.NAME',
       STORAGE_EMPLOYEE.SURNAME AS 'STORAGE_EMPLOYEE.SURNAME',
       STORAGE_EMPLOYEE.POSITION AS 'STORAGE_EMPLOYEE.POSITION',
       STORAGE_EMPLOYEE.SALARY AS 'STORAGE_EMPLOYEE.SALARY',
       STORAGE_EMPLOYEE_USER.USER_ID AS 'STORAGE_EMPLOYEE_USER.USER_ID',
       STORAGE_EMPLOYEE_USER.USERNAME AS 'STORAGE_EMPLOYEE_USER.USERNAME',
       STORAGE_EMPLOYEE_USER.PASSWORD AS 'STORAGE_EMPLOYEE_USER.PASSWORD',
       STORAGE_EMPLOYEE_USER.PERMISSION AS 'STORAGE_EMPLOYEE_USER.PERMISSION',
       STORAGE_EMPLOYEE_USER.E_MAIL AS 'STORAGE_EMPLOYEE_USER.E_MAIL'
FROM `STORAGE`
JOIN `ADDRESS` `STORAGE_ADDRESS` ON `STORAGE`.`ADDRESS_ID` = `STORAGE_ADDRESS`.`ADDRESS_ID`
JOIN `EMPLOYEE` `STORAGE_EMPLOYEE` ON `STORAGE`.`MANAGER_ID` = `STORAGE_EMPLOYEE`.`EMPLOYEE_ID`
JOIN `USER` `STORAGE_EMPLOYEE_USER` ON `STORAGE_EMPLOYEE`.`USER_ID` = `STORAGE_EMPLOYEE_USER`.`USER_ID`
WHERE `STORAGE_ID` = ?;