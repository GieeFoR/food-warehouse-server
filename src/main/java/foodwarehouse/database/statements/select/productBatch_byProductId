SELECT PRODUCT_BATCH.BATCH_ID AS 'PRODUCT_BATCH.BATCH_ID',
       PRODUCT_BATCH.PRODUCT_ID AS 'PRODUCT_BATCH.PRODUCT_ID',
       PRODUCT_BATCH.BATCH_NO AS 'PRODUCT_BATCH.BATCH_NO',
       PRODUCT_BATCH.EAT_BY_DATE AS 'PRODUCT_BATCH.EAT_BY_DATE',
       PRODUCT_BATCH.DISCOUNT AS 'PRODUCT_BATCH.DISCOUNT',
       PRODUCT_BATCH.PACKAGES_QUANTITY AS 'PRODUCT_BATCH.PACKAGES_QUANTITY',
       PRODUCT_BATCH_PRODUCT.PRODUCT_ID AS 'PRODUCT_BATCH_PRODUCT.PRODUCT_ID',
       PRODUCT_BATCH_PRODUCT.MAKER_ID AS 'PRODUCT_BATCH_PRODUCT.MAKER_ID',
       PRODUCT_BATCH_PRODUCT.PRODUCT_NAME AS 'PRODUCT_BATCH_PRODUCT.PRODUCT_NAME',
       PRODUCT_BATCH_PRODUCT.SHORT_DESCRIPTION AS 'PRODUCT_BATCH_PRODUCT.SHORT_DESCRIPTION',
       PRODUCT_BATCH_PRODUCT.LONG_DESCRIPTION AS 'PRODUCT_BATCH_PRODUCT.LONG_DESCRIPTION',
       PRODUCT_BATCH_PRODUCT.CATEGORY AS 'PRODUCT_BATCH_PRODUCT.CATEGORY',
       PRODUCT_BATCH_PRODUCT.NEED_COLD_STORAGE AS 'PRODUCT_BATCH_PRODUCT.NEED_COLD_STORAGE',
       PRODUCT_BATCH_PRODUCT.BUY_PRICE AS 'PRODUCT_BATCH_PRODUCT.BUY_PRICE',
       PRODUCT_BATCH_PRODUCT.SELL_PRICE AS 'PRODUCT_BATCH_PRODUCT.SELL_PRICE',
       PRODUCT_BATCH_PRODUCT.IMAGE AS 'PRODUCT_BATCH_PRODUCT.IMAGE',
       PRODUCT_BATCH_PRODUCT_MAKER.MAKER_ID AS 'PRODUCT_BATCH_PRODUCT_MAKER.MAKER_ID',
       PRODUCT_BATCH_PRODUCT_MAKER.ADDRESS_ID AS 'PRODUCT_BATCH_PRODUCT_MAKER.ADDRESS_ID',
       PRODUCT_BATCH_PRODUCT_MAKER.FIRM_NAME AS 'PRODUCT_BATCH_PRODUCT_MAKER.FIRM_NAME',
       PRODUCT_BATCH_PRODUCT_MAKER.TELEPHONE_NO AS 'PRODUCT_BATCH_PRODUCT_MAKER.TELEPHONE_NO',
       PRODUCT_BATCH_PRODUCT_MAKER.E_MAIL AS 'PRODUCT_BATCH_PRODUCT_MAKER.E_MAIL',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.ADDRESS_ID AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.ADDRESS_ID',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.COUNTRY AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.COUNTRY',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.TOWN AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.TOWN',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.POSTAL_CODE AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.POSTAL_CODE',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.BUILDING_NO AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.BUILDING_NO',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.STREET AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.STREET',
       PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.APARTMENT_NO AS 'PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS.APARTMENT_NO'
FROM `PRODUCT_BATCH`
JOIN `PRODUCT` `PRODUCT_BATCH_PRODUCT` ON `PRODUCT_BATCH`.`PRODUCT_ID` = `PRODUCT_BATCH_PRODUCT`.`PRODUCT_ID`
JOIN `MAKER` `PRODUCT_BATCH_PRODUCT_MAKER` ON `PRODUCT_BATCH_PRODUCT`.`MAKER_ID` = `PRODUCT_BATCH_PRODUCT_MAKER`.`MAKER_ID`
JOIN `ADDRESS` `PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS` ON `PRODUCT_BATCH_PRODUCT_MAKER`.`ADDRESS_ID` = `PRODUCT_BATCH_PRODUCT_MAKER_ADDRESS`.`ADDRESS_ID`
WHERE `PRODUCT_BATCH_PRODUCT`.`PRODUCT_ID` = ?
AND `PRODUCT_BATCH`.`EAT_BY_DATE` > date('now','+14 day')
ORDER BY `PRODUCT_BATCH`.`EAT_BY_DATE` ASC;