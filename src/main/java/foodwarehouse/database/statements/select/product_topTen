SELECT *
FROM `PRODUCT`
JOIN `MAKER` as `PRODUCT_MAKER` ON `PRODUCT`.`MAKER_ID` = `PRODUCT_MAKER`.`MAKER_ID`
JOIN `ADDRESS` as `PRODUCT_MAKER_ADDRESS` ON `PRODUCT_MAKER`.`ADDRESS_ID` = `PRODUCT_MAKER_ADDRESS`.`ADDRESS_ID`
JOIN `PRODUCT_BATCH` ON `PRODUCT`.`PRODUCT_ID` = `PRODUCT_BATCH`.`PRODUCT_ID`
JOIN `PRODUCT_ORDER` ON `PRODUCT_BATCH`.`BATCH_ID` = `PRODUCT_ORDER`.`BATCH_ID`
JOIN `ORDER` ON `PRODUCT_ORDER`.`ORDER_ID` = `ORDER`.`ORDER_ID`
WHERE `ORDER`.`ORDER_DATE` BETWEEN (CURRENT_DATE() - INTERVAL 1 MONTH) AND CURRENT_DATE()
GROUP BY `PRODUCT_BATCH`.`PRODUCT_ID`
ORDER BY SUM(`PRODUCT_ORDER`.`QUANTITY`) DESC
LIMIT 10;